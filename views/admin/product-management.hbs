            </div>
        </div>
        <div class="content">
            <main>

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="bg-mattBlackLight my-2 p-3">
                                <h2 style="color: aliceblue;" class="text-center">Product Management</h2>
                            </div>
                        </div>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="bg-mattBlackLight my-2 p-3">
                                        <h2 class="text-center table-text">All Products</h2>
                                        <div class="row">
                                        <a href="/admin/add-product" class="btn btn-success ml-auto mr-2">Add Product</a>
                                        
                                        </div>
                                        <table class="table mt-4" id="productsTable">
                                            <thead>
                                                <tr>
                                                    <th scope="col" class="table-text">Name</th>
                                                    <th scope="col" class="table-text">Category</th>
                                                    <th scope="col" class="table-text">Sub-Category</th>
                                                    <th scope="col" class="table-text">Price</th>
                                                    <th scope="col" class="table-text">Qty</th>
                                                    <th scope="col" class="table-text">Description</th>
                                                    <th scope="col" class="table-text">Options</th>
                                                    <th scope="col" class="table-text">Images</th>


                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each products}}
                                                <tr>

                                                    <td class="table-text">{{this.productName}}</td>
                                                    <td class="table-text">{{this.productCategory}}</td>
                                                    <td class="table-text">{{this.productSubCat}}</td>
                                                    <td class="table-text">{{this.productPrice}}</td>
                                                    <td class="table-text">{{this.productQty}}</td>
                                                    <td class="table-text">{{this.productDes}}</td>
                                                    <td class="table-text"><a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a> <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}" onclick="return confirm(`Are you want to delete {{this.productName}}`)"> Delete</a></td>
                                                    <td class="table-text"><img src="/product-images/{{this._id}}.jpg" alt="" style="width: 50px;height: 50px;"> </td>



                                                </tr>

                                                {{/each}}
                                            </tbody>
                                        </table>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </main>
        </div>
