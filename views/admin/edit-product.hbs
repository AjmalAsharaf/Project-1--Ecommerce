                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-6 m-auto">
                                    <div class="bg-mattBlackLight my-2 p-3">
                                        <form action="/admin/update-product/{{product._id}}" method="POST"
                                            enctype="multipart/form-data">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Name</label>
                                                <input type="text" class="form-control" id="exampleInputEmail1"
                                                    aria-describedby="emailHelp" value="{{product.productName}}"
                                                    required name="productName">

                                            </div>

                                            <div class="form-group">
                                                <label for="sel1">Category</label>
                                                <select class="form-control" id="sel1" name="productCategory"
                                                    value="{{product.productCategory}}">

                                                    <option>Male</option>
                                                    <option>Female</option>

                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="sel1">Sub Category</label>
                                                <select class="form-control" id="sel1" name="productSubCat"
                                                    value="{{product.productSubCat}}">
                                                    {{#each category}}
                                                    <option>{{this.productSubCat}}</option>
                                                    
                                                    {{/each}}
                                                </select>

                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Price</label>
                                                <input type="number" class="form-control" id="exampleInputPassword1"
                                                    placeholder="Price" required name="productPrice"
                                                    value="{{product.productPrice}}">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Qty</label>
                                                <input type="number" class="form-control" id="exampleInputPassword1"
                                                    placeholder="Quantity" required name="productQty"
                                                    value="{{product.productQty}}">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Description</label>
                                                <input type="text" class="form-control" id="exampleInputPassword1"
                                                    placeholder="Description" required name="productDes"
                                                    value="{{product.productDes}}">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Image</label>
                                                <div class="form-group">
                                                    <img src="/product-images/{{product._id}}.jpg" alt=""
                                                        style="width: 100px; height: 100px;" id="imgView">
                                                    <h5 style="color: red; display:none;" id="image-warning">Please upload only images</h5>
                                                </div>
                                                <input type="file" class="form-control" id="exampleInputPassword1"
                                                    name="Image" accept="images/ .jpg, .jpeg, .png" onchange="viewImage(event)">
                                            </div>
                                            <div>


                                                <button type="submit" class="btn btn-success" id="update-product-button">Update Product</button>
                                            </div>
                                        </form>

                                    </div>
