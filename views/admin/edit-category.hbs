<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

<script>
    
    $('#add-category').submit((e)=>{
        e.preventDefault()
        
        let productSubCat=$('#sub-category').val()
        let proId=$('#pro-id').val()
        $('#exists').hide()
        $.ajax({
            url:'/admin/edit-category',
            method:'post',
            data:{
                productSubCat,proId
            },
            success:(response)=>{
                if(response.status){
                    window.location.href='/admin/category-management'
                }else{
                    $('#exists').show()
                }
            }
        })
    })
</script>