<script>
    function addToCart(proId){
        alert('item added')
        $.ajax({
            url:'/add-to-cart/'+proId,
            method:'get',
            success:(response)=>{
        
                if(response.status){
                    let count=$('#cart-counts').html()
                    count=parseInt(count)+1
                    $('#cart-counts').html(count)
                }
               

            }
        })
    }
     function deleteSingle(cartId,proId){
        
        $.ajax({
            url:'/delete-one-cart',
            method:'post',
            data:{
                cart:cartId,
                product:proId
            },
            success:(resoponse)=>{
                if(resoponse){
                    location.reload()
                }
            }
        })
    }
</script>
