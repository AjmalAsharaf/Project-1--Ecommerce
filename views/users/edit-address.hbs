 <div class="checkout-main-area pt-120 pb-120">
            <div class="container">


                <div class="checkout-wrap pt-30">
                    <div class="row">
                        <div class="col-lg-7 m-auto" >
                            <div class="billing-info-wrap mr-50">
                                <h3>Edit address New Address</h3>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <form id="place-order" action="/edit-address" method="POST">
                                            <div class="billing-info mb-20">
                                                <label>First Name <abbr class="required"
                                                        title="required">*</abbr></label>
                                                        
                                                <input type="text" required name="firstName" value="{{address.firstName}}">
                                                <input type="text" required name="id" value="{{address._id}}" hidden>
                                                
                                            </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="billing-info mb-20">
                                            <label>Last Name <abbr class="required" title="required">*</abbr></label>
                                            <input type="text" required name="lastName" value="{{address.lastName}}">
                                        </div>
                                    </div>


                                    <div class="col-lg-12">
                                        <div class="billing-info mb-20">
                                            <label>Street Address <abbr class="required"
                                                    title="required">*</abbr></label>
                                            <input class="billing-address" placeholder="House name" type="text" required
                                                name="houseName" value="{{address.houseName}}">
                                            <input placeholder="Street address" type="text" required
                                                name="streetAddress" value="{{address.streetAddress}}">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="billing-info mb-20">
                                            <label>Town / City <abbr class="required" title="required">*</abbr></label>
                                            <input type="text" required name="town" value="{{address.town}}">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="billing-info mb-20">
                                            <label>State<abbr class="required" title="required">*</abbr></label>
                                            <input type="text" required name="state" value="{{address.state}}">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="billing-info mb-20">
                                            <label>Postcode / ZIP <abbr class="required"
                                                    title="required">*</abbr></label>
                                            <input type="number" required name="zip" value="{{address.zip}}">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="billing-info mb-20">
                                            <label>Phone <abbr class="required" title="required">*</abbr></label>
                                            <input type="number" required name="phone" value="{{address.phone}}">
                                            
                                        </div>
                                    </div>

                                </div>


                                
                                  <button type="submit" class="btn btn-danger">Update Address</button>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>